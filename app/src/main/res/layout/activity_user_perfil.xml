<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userPerfilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layPerfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">>

                <ImageView
                    android:id="@+id/layPerfil_ivPerfil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/imgusernoimg" />

                <Button
                    android:id="@+id/layPerfil_btnMudarFotoPerfil"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_btnbranco"
                    android:drawableTop="@drawable/ic_camera_alt_black_24dp"
                    android:paddingTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/layPerfil_ivPerfil"
                    app:layout_constraintEnd_toEndOf="@+id/layPerfil_ivPerfil"
                    app:layout_constraintTop_toBottomOf="@+id/layPerfil_ivPerfil"
                    tools:visibility="visible" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layStories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layPerfil_ivPerfil"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/bahnschrift"
                        android:text="História do dia"
                        android:textColor="@color/azulClaro"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/layStories_iv"
                        android:layout_width="180dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/layStories_txtTempoRestante"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView50"
                        app:srcCompat="@drawable/background_white_chapado"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/layStories_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="@+id/layStories_iv"
                        app:layout_constraintEnd_toEndOf="@+id/layStories_iv"
                        app:layout_constraintStart_toStartOf="@+id/layStories_iv" />

                    <TextView
                        android:id="@+id/layStories_txSemStories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Sem história do dia para exibir"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toTopOf="@+id/layStories_btnAddStorie"
                        app:layout_constraintEnd_toEndOf="@+id/layStories_iv"
                        app:layout_constraintStart_toStartOf="@+id/layStories_iv"
                        app:layout_constraintTop_toBottomOf="@+id/textView50" />

                    <Button
                        android:id="@+id/layStories_btnAddStorie"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_botaobranco"
                        android:drawableTop="@drawable/ic_add_circle_oragen"
                        android:paddingTop="2dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView50" />

                    <TextView
                        android:id="@+id/layStories_txtTempoRestante"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:text=""
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layRedesSociais"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_bg_onlytop"
                    app:layout_constraintBottom_toTopOf="@+id/layPopupfoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/layPerfil_ivPerfil"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/layRedesSociais_txFace"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/colombia"
                        android:text="face"
                        android:textAlignment="textStart"
                        android:textColor="@color/azulEscuro"
                        android:textSize="17sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout33" />

                    <TextView
                        android:id="@+id/layRedesSociais_txInstagram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/colombia"
                        android:text="Insta"
                        android:textAlignment="textStart"
                        android:textColor="#F29274"
                        android:textSize="17sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layRedesSociais_txFace" />

                    <TextView
                        android:id="@+id/layRedesSociais_txTwitter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/colombia"
                        android:text="Twitter"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layRedesSociais_txInstagram" />


                    <Button
                        android:id="@+id/btnAddRedesSociais"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/ic_botaobranco"
                        android:drawableTop="@drawable/ic_plus_blue"
                        android:paddingTop="6dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout33" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout33"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/azulClaro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/textView49"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Redes sociais"
                            android:textAlignment="textStart"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layPopupfoto"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_bg_onlytop"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layPerfil_ivPerfil"
                    tools:visibility="gone">

                    <Button
                        android:id="@+id/layPopupfoto_btnCamera"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:background="#ffffff"
                        android:drawableStart="@drawable/ic_camera_alt_blue_24dp"
                        android:fontFamily="@font/bahnschrift"
                        android:paddingStart="10dp"
                        android:text="  Tirar uma foto agora"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/azulEscuro"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/layPopupfoto_btnGaleria"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:background="#ffffff"
                        android:drawableStart="@drawable/ic_photo_size_select_actual_black_24dp"
                        android:fontFamily="@font/bahnschrift"
                        android:paddingStart="10dp"
                        android:text="  Usar uma foto do celular"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/azulEscuro"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layPopupfoto_btnCamera" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layAddRedes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_bg_onlytop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout34"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/azulClaro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/layAddRedes_btnVoltar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_arrow_back_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/layAddredes_etFace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Seu perfil do Facebook"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout34" />

            <EditText
                android:id="@+id/layAddredes_etInsta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Seu perfil do Instagram"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layAddredes_etFace" />

            <EditText
                android:id="@+id/layAddredes_etTwit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Seu perfil do Twitter"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layAddredes_etInsta" />

            <Button
                android:id="@+id/layAddRedes_btnSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/ic_btnbranco"
                android:fontFamily="@font/bahnschrift"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="Salvar"
                android:textAllCaps="false"
                android:textColor="@color/azulClaro"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layAddredes_etTwit" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layCriandoStory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rounded_layout_bg"
        android:elevation="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/textView73"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bahnschrift"
            android:text="Origem da foto?"
            android:textAlignment="center"
            android:textColor="@color/azulClaro"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/layCriandoStory_btnAddText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_botaobranco"
            android:drawableTop="@drawable/ic_text_fields_blue_24dp"
            android:paddingTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layCriandoStory_iv" />

        <Button
            android:id="@+id/layCriandoStory_btnFechar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/layCriandoStory_btnFoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_btnbranco"
            android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
            android:text="Foto"
            android:textColor="@color/laranja"
            app:layout_constraintEnd_toStartOf="@+id/guideline45"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layCriandoStory_btnFechar"
            app:layout_goneMarginStart="16dp" />

        <Button
            android:id="@+id/layCriandoStory_btnGaleria"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_btnbranco"
            android:drawableStart="@drawable/ic_collections_organe"
            android:text="Galeria"
            android:textColor="@color/laranja"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@+id/guideline45"
            app:layout_constraintTop_toTopOf="@+id/layCriandoStory_btnFoto"
            app:layout_goneMarginStart="16dp" />

        <ImageButton
            android:id="@+id/layCriandoStory_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layCriandoStory_btnFoto"
            app:layout_constraintWidth_percent="0.75"
            app:srcCompat="@drawable/background_white_chapado" />

        <TextView
            android:id="@+id/layCriandoStory_txtMensagem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/layCriandoStory_iv"
            app:layout_constraintEnd_toEndOf="@+id/layCriandoStory_iv"
            app:layout_constraintStart_toStartOf="@+id/layCriandoStory_iv"
            app:layout_goneMarginBottom="16dp" />

        <Button
            android:id="@+id/layCriandoStory_BtnPublicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_btnbranco"
            android:fontFamily="@font/bahnschrift"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="publicar"
            android:textColor="@color/azulEscuro"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/layCriandoStories_btnPosicaoTxtTop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_keyboard_arrow_right_darkblue"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/layCriandoStory_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layCriandoStory_iv" />

        <Button
            android:id="@+id/layCriandoStories_btnPosicaoTxtMiddle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_keyboard_arrow_right_darkblue"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/layCriandoStory_iv"
            app:layout_constraintEnd_toStartOf="@+id/layCriandoStory_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layCriandoStory_iv" />

        <Button
            android:id="@+id/layCriandoStories_btnPosicaoTxtBottom"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_keyboard_arrow_right_orange"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/layCriandoStory_iv"
            app:layout_constraintEnd_toStartOf="@+id/layCriandoStory_iv"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/layCriandoStories_btnApagaImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_wrong"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/layCriandoStory_iv"
            app:layout_constraintTop_toTopOf="@+id/layCriandoStory_iv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layCriandoStories_layCorTexto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/top_backgroun_bar"
            app:layout_constraintBottom_toTopOf="@+id/layCriandoStory_BtnPublicar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layCriandoStory_iv">

            <TextView
                android:id="@+id/textView75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Texto"
                app:layout_constraintEnd_toStartOf="@+id/textColorbtnBranco"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/textColorbtnBranco"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="#ffffff"
                android:elevation="5dp"
                app:layout_constraintStart_toStartOf="@+id/guideline47"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.12" />

            <Button
                android:id="@+id/textColorbtnPreto"
